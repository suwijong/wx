#indexContainer {
  width: 100%;
  height: 100%;
}
#indexContainer .navContainer {
  height: 80rpx;
  width: 100%;
  border-bottom: 1rpx solid #eee;
  white-space: nowrap /*该属性必须设置,官网没有明确说明*/;
}
#indexContainer .navContainer .navItem {
  width: 140rpx;
  height: 100%;
  margin: 0 10rpx;
  display: inline-block /*该属性必须设置,官网没有明确说明*/;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  position: relative;
}
#indexContainer .navContainer .navItem.activeClass:after {
  content: '';
  height: 1rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #bb2c08;
}
#indexContainer .contentContainer {
  width: 100%;
  height: calc(100vh - 162rpx);
}
#indexContainer .contentContainer ::-webkit-scrollbar {
  width: 0;
}

