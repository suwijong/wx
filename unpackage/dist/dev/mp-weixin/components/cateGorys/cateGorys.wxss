.cateContainer .cateItem {
  white-space: nowrap;
}
.cateContainer .cateItem .cateImg {
  width: 100%;
  height: 370rpx;
}
.cateContainer .cateItem .scrollItem {
  width: 200rpx;
  display: inline-block;
  margin: 20rpx 10rpx;
  vertical-align: top;
}
.cateContainer .cateItem .scrollItem.more {
  text-align: center;
  line-height: 200rpx;
  font-size: 26rpx;
}
.cateContainer .cateItem .scrollItem .scrollImg {
  width: 200rpx;
  height: 200rpx;
  background: #eee;
}
.cateContainer .cateItem .scrollItem ._p {
  font-size: 24rpx;
  line-height: 40rpx;
  width: 100%;
/* 自动换行 */
  white-space: pre-wrap;
/* 多行文本 溢出省略号替代 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

